<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div align="center">
        <h2>VIEW USER</h2>
        <table border="2">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Password</td>
                <td>Gender</td>
                <td>Hobby</td>
                <td>City</td>
                <td>Image</td>
                <td>Action</td>
            </tr>
            <% allrecord.map((val,index)=>{ %>
                <tr>
                    <td>
                        <%= ++index %>
                    </td>
                    <td>
                        <%= val?.username %>
                    </td>
                    <td>
                        <%= val?.usermail %>
                    </td>
                    <td>
                        <%= val?.userpassword %>
                    </td>
                    <td>
                        <%= val?.usergender %>
                    </td>
                    <td>
                        <%= val?.userhobby %>
                    </td>
                    <td>
                        <%= val?.usercity %>
                    </td>
                    <td>
                        <img src="<%= val?.userimage %>" alt="" srcset="" width="120">
                    </td>
                    <td>
                        <a href="/deleteuser?did=<%= val?.id %>">Delete</a> ||
                        <a href="/edituser?eid=<%= val?.id %>">Edit</a>
                    </td>
                </tr>
        <% }) %>
        </table>
        <a href="/">Add</a>
    </div>
</body>
</html>