<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div align="center">
        <h1>View User</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <!-- <th>City</th> -->
                     <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% record.map((val,index)=>{%>
                    <tr>
                        <td>
                            <%= val.id %>
                        </td>
                        <td>
                            <%= val?.username%>
                        </td>
                        <td>
                            <%= val?.useremail%>
                        </td>
                        <td>
                            <%= val?.userpassword%>
                        </td>
                        <td>
                            <%= val?.usergender %>
                        </td>
                        <td>
                            <%= val?.userhobby %>
                        </td>
                        <td>
                            <img src="<%= val?.image %>" width="100"/>
                        </td>
                        <td>
                            <a href="/edituser?editId=<%= val.id%>">Edit</a> ||
                            <a href="deleteuser?deleteId=<%= val.id%>">Delete</a>
                        </td>
                    </tr>
                <% })%>
            </tbody>
        </table>
        <a href="/">Add</a>
    </div>
</body>
</html>