<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<style>
  /* General Styling */
body {
    background-color: #f8f9fa;
    font-family: 'Arial', sans-serif;
}

/* Breadcrumb Styling */
.breadcrumb {
    background: none;
    font-size: 14px;
}

/* Card Styling */
.card {
    border-radius: 10px;
}

.card-header {
    font-size: 18px;
    text-transform: uppercase;
}

/* Form Styling */
.custom-input {
    padding: 10px;
    border-radius: 5px;
    border: 2px solid #ddd;
    transition: all 0.3s ease-in-out;
}

.custom-input:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
}

/* Button Styling */
.custom-btn {
    background-color: #007bff;
    color: white;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
}

.custom-btn:hover {
    background-color: #0056b3;
}

</style>
<body>

<main class="app-main">
    <!-- Content Header -->
    <div class="app-content-header bg-light py-3 shadow-sm">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h3 class="mb-0 text-primary fw-bold">Add New Category</h3>
                </div>
                <div class="col-sm-6 text-sm-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Home</a></li>
                            <li class="breadcrumb-item active text-dark" aria-current="page">Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content Header -->

    <!-- Content -->
    <div class="app-content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <!-- Category Form Card -->
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 rounded-3">
                        <div class="card-header bg-primary text-white text-center fw-bold">
                            <i class="bi bi-folder-plus me-2"></i> Add Category
                        </div>
                        <div class="card-body">
                            <form method="post" action="/category/insertcategory" enctype="multipart/form-data">
                                <!-- Category Name -->
                                <div class="mb-3">
                                    <label for="categoryName" class="form-label fw-semibold">Category Name</label>
                                    <input type="text" class="form-control border-2 custom-input" id="categoryName" name="category" placeholder="Enter category name" required />
                                </div>

                                <!-- Price -->
                                <div class="mb-3">
                                    <label for="price" class="form-label fw-semibold">Price</label>
                                    <input type="number" class="form-control border-2 custom-input" id="price" name="price" placeholder="Enter price" required />
                                </div>

                                <!-- Quantity -->
                                <div class="mb-3">
                                    <label for="qty" class="form-label fw-semibold">Quantity</label>
                                    <input type="number" class="form-control border-2 custom-input" id="qty" name="qty" placeholder="Enter quantity" required />
                                </div>

                                <!-- Description -->
                                <div class="mb-3">
                                    <label for="description" class="form-label fw-semibold">Description</label>
                                    <textarea class="form-control border-2 custom-input" id="description" name="description" rows="3" placeholder="Enter description" required></textarea>
                                </div>

                                <!-- Image Upload -->
                                <div class="mb-3">
                                    <label for="image" class="form-label fw-semibold">Upload Image</label>
                                    <input type="file" class="form-control border-2 custom-input" id="image" name="image" accept="image/*" required />
                                </div>

                                <!-- Submit Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg custom-btn">
                                        <i class="bi bi-plus-circle me-2"></i> Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- End Category Form Card -->
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="/category" class="btn btn-outline-primary">View Categories</a>
    </div>
    <!-- End Content -->
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
