<%- include('../header') %>


    <div class="container mt-5">
        <div class="row">
            <div class="col-12">

                <% if(locals?.message?.success) { %>
                    <div class="alert alert-success w-50" role="alert">
                        <%= locals?.message?.success %>
                    </div>
                    <% } %>

                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title m-b-0">Static Table</h4>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Srno</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% category.forEach((val,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%= ++index %>
                                            </td>
                                            <td>
                                                <%= val?.category %>
                                            </td>
                                            <td>
                                                <a href="/category/deletecategory?id=<%= val?.id %>"
                                                    class="btn btn-danger btn-sm">Delate
                                                </a>

                                                <a href="/category/editcategory?id=<%= val?.id %>"
                                                    class="btn btn-primary btn-sm">Edit
                                            </td>
                                            <td>

                                                <% if(val?.status=="active" ) { %><a
                                                        href="/category/changestatus?id=<%= val?.id %>&status=deactive"
                                                        class=" btn btn-success btn-sm">
                                                        <%= val?.status %>
                                                    </a>
                                                    <% } else { %>
                                                        <a href="/category/changestatus?id=<%= val?.id %>&status=active"
                                                            class="btn btn-warning btn-sm">
                                                            <%= val?.status %>
                                                        </a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
            </div>
        </div>
    </div>


    <%- include('../footer') %>