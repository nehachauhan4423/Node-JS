<%- include('../header') %>


    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <% if(locals.message?.success) { %>
                    <div class="alert alert-success">
                        <%= locals.message?.success %>
                    </div>
                    <% } %>

            <div class="card">
                <form method="post" action="/category/updatecategory">
                    <input type="hidden" name="editid" value="<%= single?.id %>" />
                        <div class="card-body">
                            <h4>Category</h4>
                                <div class="form-group">
                                    <label class="col-sm-3 text-right control-label col-form-label">First
                                            Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="category"
                                                value="<%= single?.category %>" placeholder="Category">
                                        </div>
                                    </div>
                                </div>
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>