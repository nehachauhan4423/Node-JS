<%- include('../header') %>

<style>
    .page--wrapper {
        padding: 40px 0;
        background-color: #f8f9fa;
    }
    .card {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        border: none;
        background: #fff;
        padding: 20px;
    }
    .card h4 {
        text-align: center;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-transform: uppercase;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
        color: #555;
    }
    select, input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        outline: none;
        transition: all 0.3s ease;
        background: #fff;
    }
    select:focus, input:focus {
        border-color: #007bff;
        box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
    }
    .button-submit {
        text-align: center;
        margin-top: 20px;
    }
    .button-submit button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s ease;
    }
    .button-submit button:hover {
        background-color: #0056b3;
    }
    .alert-success {
        text-align: center;
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;
        color: #155724;
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
    }
</style>

<div class="page--wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="col-md-6">
                    <% if(locals.message?.success){ %>
                        <div class="alert alert-success">
                            <%= locals.message?.success %>
                        </div>
                    <% } %>
                </div>
                <div class="card">
                    <form action="/productcategory/insertexsubcategory" method="post">
                        <div class="card-body">
                            <h4>Product</h4>
                            <div class="form-group">
                                <label>Category</label>
                                <div class="col-sm-9">
                                    <select name="category" id="category" onchange="categoryChange()">
                                        <option value="">---select category---</option>
                                        <% category.map((val)=> { %>
                                            <option value="<%= val?.id %>">
                                                <%= val?.category %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Subcategory</label>
                                <div class="col-sm-10">
                                    <select name="subcategory" id="subcategory">
                                        <option>---select subcategory---</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Exsubcategory</label>
                                <div class="col-sm-10">
                                    <input type="text" name="exsubcategory" placeholder="Enter Exsubcategory">
                                </div>
                            </div>

                        </div>
                        <div class="button-submit">
                            <button type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript">
    const categoryChange = () => {
        let catid = document.getElementById('category').value;
        $.ajax({
            method : 'GET',
            url : `/exsubcategory/ajaxcategorywiserecord?categoryid=${catid}`,
            success : function (res) {
                if (res.success) {
                    let tbl = "";
                    tbl += `<option>---select subcategory---</option>`;
                    let category = res.category;
                    category.map((val) => {
                        tbl += `<option value=${val?._id}> ${val?.subcategory} </option>`;
                    });
                    document.getElementById('subcategory').innerHTML = tbl;
                }
            }
        });
    };
</script>

<%-include('../footer') %>
