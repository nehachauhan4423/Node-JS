<%- include('../header') %>

    <div class="container">
        <div class="row">

            <div class="col-md-6">

                <% if(locals.message?.success) { %>
                    <div class="alert alert-success">
                        <%= locals.message?.success %>
                    </div>
                    <% } %>

                        <div class="card">
                            <form method="post" action="/exsubcategory/insertexsubcategory">
                                <input type="hidden" value="<%= single?.id %>" name="editid">
                                <div class="card-main">
                                    <h4 class="card-title">Exsubcategory</h4>
                                    <div class="form-grouup row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                            Category</label>
                                        <div class="col-sm-9">
                                            <select name="category" id="category" onchange="categoryChange()">
                                                <option>---select category---</option>

                                                <% category.map((val)=>{ %>
                                                    <option <% if(single?.categoryId?.category==val?.category) { %>
                                                        selected <% } %>
                                                            value="<%= val?.id %>">
                                                                <%= val?.category %>
                                                    </option>
                                                    <% }) %>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-grouup">
                                        <label for="fname" class="col-sm-3 text-right">
                                            Subcategory</label>
                                        <div class="col-sm-9">
                                            <select name="subcategory" id="subcategory">
                                                <option>---select subcategory---</option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-grouup row">
                                        <label for="fname" class="col-sm-3 text-right">Exsubcategory</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="exsubcategory" value="<%= single?.exsubcategory %>"
                                                name="exsubcategory" placeholder="Exsubcategory">
                                        </div>
                                    </div>

                                </div>

                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>

                            </form>
                        </div>
            </div>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script type="text/javascript">

        const editSubcategory = () => {
            let catid = `<%= single?.categoryId?.id %>`;
            let subcateid = `<%= single?.subcategoryId?.id %>`;
            $.ajax({
                method: 'GET',
                url: `/exsubcategory/ajaxcategorywiserecord?categoryid=${catid}`,
                success: function (res) {
                    let subcategory = res.subcategory;
                    let category = res.category;
                    let tbl = "";
                    tbl += `<option>---select subcategory---</option>`
                    category.map((val) => {
                        console.log(val);

                        tbl += `
                            <option ${val?._id == subcateid ? 'selected' : ''} value=${val?._id}>${val?.subcategory}</option>
                        `
                    })
                    document.getElementById('subcategory').innerHTML = tbl;
                }
            })

        }
        editSubcategory();

        const categoryChange = () => {
            let catid = document.getElementById('category').value;
            $.ajax({
                method: 'GET',
                url: `/exsubcategory/ajaxcategorywiserecord?categoryid=${catid}`,
                success: function (res) {
                    if (res.success) {
                        let tbl = "";
                        tbl += `<option value="">---select subcategory---</option>`
                        let category = res.category;
                        category.map((val) => {
                            tbl += `
                                    <option value=${val?._id}>${val?.subcategory}</option>
                                `
                        })
                        document.getElementById('subcategory').innerHTML = tbl;
                    }
                }
            })
        }
    </script>

    <%- include('../footer') %>